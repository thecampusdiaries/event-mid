<% layout('/layouts/boilerplate')%>
    <% console.log(event)%>
        <div>
            <h1>
                <%= event.name %>
            </h1>
            <p>
                <%= event.description %>
            </p>
            <p>Date: <%= event.date.toDateString() %>
            </p>
            <p>Organized by: <%= event.organizer.username %>
            </p>

            <h2>Posts</h2>
            <ul>
                <% event.posts.forEach(post=> { %>
                    <li>
                        <%= post.title %> - <%= post.content %>
                    </li>
                    <% }) %>
            </ul>
            <a href="/explore/posts/new">Add Post</a>
        </div>